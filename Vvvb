<?php // */ #`{{ Hargai Karya Orang Lain, Jika Kalian Ingin Di Hargai #`{{ Terima Kasih, Atas Pengertiannya require_once("mainconfig.php"); $cek = mysqli_query($db, "SELECT * FROM provider WHERE code = 'IRV'"); $hah = mysqli_fetch_array($cek); $apinya = $hah['api_key']; $url = "https://irvankede-smm.co.id/api/service"; $postdata = "api_key=$apinya"; $ch = curl_init(); curl_setopt($ch, CURLOPT_URL, $url); curl_setopt($ch, CURLOPT_POST, 1); curl_setopt($ch, CURLOPT_POSTFIELDS, $postdata); curl_setopt($ch, CURLOPT_RETURNTRANSFER, 1); curl_setopt($ch, CURLOPT_SSL_VERIFYPEER, false); $result = curl_exec($ch); //echo $result; $olah = json_decode($result, true); $no = 0; while($no < count($olah['data'])){ $category = $olah['data'][$no]['category']; $kode = $olah['data'][$no]['id']; $service = $olah['data'][$no]['name']; $min = $olah['data'][$no]['min']; $max = $olah['data'][$no]['max']; $price = $olah['data'][$no]['price']; $note = $olah['data'][$no]['notes']; $rate = 3000; //TAMBAH HARGA BIAR UNTUNG $totaly = $rate+$price; $cek_service = mysqli_query($db, "SELECT * FROM services WHERE sid = '$kode'"); $hitung = mysqli_num_rows($cek_service); 		if ($hitung > 0) { echo "Service $service => sudah ada<br>"; $no++; 		} else { $input = mysqli_query($db, "INSERT INTO services (sid, category, service, note, min, max, price, status, pid, provider) VALUES ('$kode', '$category', '$service', '$note', '$min', '$max', '$totaly', 'Active', '$kode', 'IRV')"); if ($input){ echo "===============<br>Successfully Adding Services<br>Category: $category<br>Service: $service<br>Price: $totaly<br>Min: $min<br>Max: $max<br>Note: $note<br>Status: Active<br>===============<br>"; $no++; }else{ echo mysqli_error(); } $no++; } } ?>
